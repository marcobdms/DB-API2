<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>fabricantes</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">

</head>
<body>
  <h1>Categorias</h1>
  <table>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
    </tr>
    <% categorias.forEach(categorias => { %>
      <tr>
        <td><%= categorias.id %></td>
        <td><%= categorias.Nombre %></td>
        <td>
          <a href="/editarcategoria/<%= categorias.id %>">Editar</a>
          <a href="/eliminarcategoria/<%= categorias.id %>">Eliminar</a>
        </td>
      </tr>
    <% }) %>
  </table>
  <a href="/agregarcategoria">Agregar categoria</a>
  <br><br><br>
  <a href="/">HOME</a>
</body>
</html>
